<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/transparent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/controls_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/light"
            android:padding="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <androidx.constraintlayout.helper.widget.Flow
                android:id="@+id/flow_root"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:constraint_referenced_ids="flow_alpha,flow_theme,flow_user,add_button"
                app:flow_horizontalAlign="center"
                app:flow_verticalGap="@dimen/widget_grid_spacing"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <androidx.constraintlayout.helper.widget.Flow
                android:id="@+id/flow_alpha"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:flow_verticalGap="@dimen/widget_grid_spacing"
                app:constraint_referenced_ids="label_choose_alpha,alpha_bar,flow_alpha_labels" />

            <TextView
                android:id="@+id/label_choose_alpha"
                style="@android:style/TextAppearance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/widget_config_alpha" />

            <SeekBar
                android:id="@+id/alpha_bar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:max="255"
                android:progress="255" />

            <androidx.constraintlayout.helper.widget.Flow
                android:id="@+id/flow_alpha_labels"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:constraint_referenced_ids="label_transparent,label_solid"
                app:flow_horizontalStyle="spread_inside" />

            <TextView
                android:id="@+id/label_transparent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:text="@string/widget_config_transparent" />

            <TextView
                android:id="@+id/label_solid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:text="@string/widget_config_solid" />

            <androidx.constraintlayout.helper.widget.Flow
                android:id="@+id/flow_theme"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:flow_verticalGap="@dimen/widget_grid_spacing"
                app:constraint_referenced_ids="label_choose_theme,theme_bar,flow_theme_labels" />

            <TextView
                android:id="@+id/label_choose_theme"
                style="@android:style/TextAppearance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="316dp"
                android:text="@string/widget_config_theme"
                app:layout_constraintTop_toTopOf="parent" />

            <SeekBar
                android:id="@+id/theme_bar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:max="2"
                android:progress="1" />

            <androidx.constraintlayout.helper.widget.Flow
                android:id="@+id/flow_theme_labels"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:constraint_referenced_ids="label_light,label_system,label_dark"
                app:layout_constraintBottom_toTopOf="@+id/flow_user"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:flow_horizontalStyle="spread_inside" />

            <TextView
                android:id="@+id/label_light"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:text="@string/widget_config_light" />

            <TextView
                android:id="@+id/label_system"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="@string/widget_config_system" />

            <TextView
                android:id="@+id/label_dark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:text="@string/widget_config_dark" />

            <androidx.constraintlayout.helper.widget.Flow
                android:id="@+id/flow_user"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:constraint_referenced_ids="label_choose_user,user_spinner"
                app:flow_horizontalGap="@dimen/widget_grid_spacing"
                app:flow_horizontalStyle="packed"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="163dp" />

            <TextView
                android:id="@+id/label_choose_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/widget_config_user" />

            <Spinner
                android:id="@+id/user_spinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:layout_editor_absoluteX="99dp"
                tools:layout_editor_absoluteY="163dp" />

            <Button
                android:id="@+id/add_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/margin_basic"
                android:text="@string/widget_config_submit"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toTopOf="@+id/controls_layout"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@android:color/transparent">

            <FrameLayout
                android:id="@+id/widget_frame"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:foregroundGravity="center"
                app:layout_constraintBottom_toTopOf="@+id/guideline_bottom"
                app:layout_constraintEnd_toStartOf="@+id/guideline_right"
                app:layout_constraintStart_toStartOf="@+id/guideline_left"
                app:layout_constraintTop_toTopOf="@+id/guideline_top">

            </FrameLayout>

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.85" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.15" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline_bottom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.70" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline_top"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.30" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>