<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/tools"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetEnd="@+id/end"
        motion:constraintSetStart="@id/start"
        motion:duration="250"
        motion:motionInterpolator="linear">
        <KeyFrameSet>
            <KeyPosition
                motion:framePosition="50"
                motion:keyPositionType="pathRelative"
                motion:motionTarget="text_group"
                motion:percentX="0.5"
                motion:percentY="-0.2" />
        </KeyFrameSet>
    </Transition>

    <ConstraintSet android:id="@+id/start">
        <Constraint android:id="@+id/state_switch">
            <PropertySet app:visibilityMode="ignore" />
        </Constraint>
        <Constraint android:id="@+id/user_image">
            <PropertySet app:visibilityMode="ignore" />
        </Constraint>
        <Constraint
            android:id="@+id/list"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            motion:layout_constraintEnd_toEndOf="@+id/more_info"
            motion:layout_constraintStart_toStartOf="@+id/user_image"
            motion:layout_constraintTop_toBottomOf="parent"
            android:alpha="0" />
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
        <Constraint android:id="@+id/state_switch">
            <PropertySet app:visibilityMode="ignore" />
        </Constraint>
        <Constraint
            android:id="@+id/list"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/nav_header_components_margin"
            motion:layout_constraintBottom_toBottomOf="@+id/state_switch"
            motion:layout_constraintEnd_toEndOf="@+id/text_flow"
            motion:layout_constraintStart_toStartOf="@+id/user_image"
            motion:layout_constraintTop_toBottomOf="@+id/account_name" />
        <Constraint
            android:id="@+id/text_flow"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="@dimen/nav_header_components_margin"
            motion:layout_constraintEnd_toStartOf="@+id/state_switch"
            motion:layout_constraintStart_toEndOf="@+id/user_image"
            motion:layout_constraintTop_toTopOf="@+id/user_image" />
        <Constraint
            android:id="@+id/user_image"
            android:layout_width="@dimen/nav_header_image_minimized"
            android:layout_height="@dimen/nav_header_image_minimized"
            android:layout_marginStart="@dimen/nav_header_start_margin"
            android:layout_marginTop="@dimen/nav_header_top_margin"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toTopOf="parent">
            <PropertySet app:visibilityMode="ignore" />
        </Constraint>
        <Constraint
            android:id="@+id/more_info"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            motion:layout_constraintTag="text_group"
            android:alpha="0" />
        <Constraint
            android:id="@+id/school"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            motion:layout_constraintTag="text_group"
            android:alpha="0" />
    </ConstraintSet>
</MotionScene>