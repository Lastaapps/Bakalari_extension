<resources>
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.Text" parent="Theme.AppCompat">
        <item name="android:textColorPrimary">@color/primary_text_light</item>
        <item name="android:textSize">@dimen/primary_text</item>
    </style>

    <style name="AppTheme.Text.Bigger" parent="AppTheme.Text">
        <item name="android:textSize">@dimen/primary_text_bigger</item>
    </style>

    <style name="AppTheme.Text.Bold" parent="Theme.AppCompat">
        <item name="android:textColorPrimary">@color/primary_text_light</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/primary_text_bold</item>
    </style>

    <style name="AppTheme.Text.Secondary" parent="Theme.AppCompat">
        <item name="android:textSize">@dimen/primary_text</item>
    </style>

    <style name="AppTheme.Heading" parent="AppTheme.Text">
        <item name="android:textSize">@dimen/heading_text_size</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="AppTheme.Secondary" parent="AppTheme.Text">
        <item name="android:textColorPrimary">@android:color/secondary_text_light</item>
    </style>


    <style name="AppTheme.Clickable" parent="AppTheme.Text">
        <item name="android:textColor">@color/link</item>
    </style>

    <!-- Used in about fragment -->
    <style name="AppTheme.ImageButton">
        <item name="android:scaleType">fitCenter</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:background">@android:color/transparent</item>

        <item name="android:maxWidth">@dimen/image_button</item>
        <item name="android:maxHeight">@dimen/image_button</item>
        <item name="android:layout_width">@dimen/image_button</item>
        <item name="android:layout_height">@dimen/image_button</item>

        <item name="android:layout_margin">@dimen/margin_basic</item>
    </style>

    <style name="AppTheme.SmallImageButton">
        <item name="android:scaleType">fitCenter</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:background">@android:color/transparent</item>

        <item name="android:maxWidth" >@dimen/small_image_button</item>
        <item name="android:maxHeight">@dimen/small_image_button</item>
        <item name="android:layout_width">@dimen/small_image_button</item>
        <item name="android:layout_height">@dimen/small_image_button</item>

        <item name="android:layout_margin">@dimen/margin_basic</item>
    </style>

    <style name="AppTheme.Transparent" parent="AppTheme.NoActionBar">
        <item name="android:windowBackground">#1000</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowShowWallpaper">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="AppTheme.Dialog" parent="Theme.MaterialComponents.DayNight.Dialog">
        <item name="android:padding">10dp</item>
    </style>

    <style name="AppTheme.Dialog.Title" parent="Theme.MaterialComponents.DayNight.Dialog">
        <item name="android:textColor">@color/primary_text_light</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppTheme.Dialog.Message" parent="Theme.MaterialComponents.DayNight.Dialog">
        <item name="android:textColor">@color/primary_text_light</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="AppTheme.Dialog.Button" parent="Theme.MaterialComponents.DayNight.Dialog">
        <item name="android:textAllCaps">true</item>
        <item name="android:layout_margin">@dimen/margin_basic</item>
        <item name="backgroundColor">#0000</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">10dp</item>
    </style>

    <!-- License activity styles-->
    <style name="License.Activity" parent="AppTheme"></style>

    <style name="License.Label" parent="AppTheme.Text">
        <item name="android:textSize">@dimen/heading_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="License.Group" parent="AppTheme.Text">
        <item name="android:layout_margin">@dimen/margin_basic</item>
    </style>

    <style name="License.Type" parent="AppTheme.Text">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="License.Package" parent="AppTheme.Text">
        <item name="android:layout_marginTop">1dp</item>
    </style>

    <style name="License.ShowHide" parent="AppTheme.Text">

    </style>

    <style name="License.Content" parent="AppTheme.Text">
        <item name="backgroundColor">@color/gray_background</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="AppTheme.LastUpdate" parent="">
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">@dimen/last_updated_text_size</item>
        <item name="android:textColor">@color/last_updated_text_color</item>
        <item name="android:background">@color/last_updated_background_color</item>
    </style>

    <!-- Absence -->
    <style name="Absence.Day.Values" parent="AppTheme.Text">
        <item name="android:layout_margin">@dimen/margin_basic</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_width">@dimen/absence_day_value_width</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Absence.Day.Icon" parent="AppTheme">
        <item name="android:scaleType">fitCenter</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:background">@android:color/transparent</item>

        <item name="android:maxWidth">@dimen/absence_day_icon_size</item>
        <item name="android:maxHeight">@dimen/absence_day_icon_size</item>
        <item name="android:layout_width">@dimen/absence_day_icon_size</item>
        <item name="android:layout_height">@dimen/absence_day_icon_size</item>

        <item name="android:layout_margin">@dimen/margin_basic</item>
    </style>

</resources>