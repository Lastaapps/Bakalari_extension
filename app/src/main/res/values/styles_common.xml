<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.Text" parent="Theme.AppCompat">
        <item name="android:textColorPrimary">@android:color/primary_text_light</item>
    </style>

    <!-- Used in about fragment -->
    <style name="AppTheme.SmallImageButton">
        <item name="android:scaleType">fitCenter</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:background">@android:color/transparent</item>

        <item name="android:maxWidth" >@dimen/small_image_button</item>
        <item name="android:maxHeight">@dimen/small_image_button</item>
        <item name="android:layout_width">@dimen/small_image_button</item>
        <item name="android:layout_height">@dimen/small_image_button</item>

        <item name="android:layout_margin">@dimen/margin_basic</item>
    </style>

</resources>